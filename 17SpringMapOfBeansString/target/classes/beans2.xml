<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="car" class="com.cloudsmartz.SpringListOfBeans.usingprops.Car">
		<constructor-arg name="carName" value="MERCEDEZ"></constructor-arg>
		<constructor-arg name="drivers">
			<props>
				<prop key="Gagan">Singh</prop>
				<prop key="Arsh">S</prop>
				<prop key="Simi">Rana</prop>
			</props>
		</constructor-arg>
	</bean>

</beans>